@page
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>
<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow">
            <div class="card-body">
                <h5 class="card-title">Batteries</h5>
                <p class="card-text">Manage the system's batteries.</p>
                <a asp-page="./BatteryPage/Index" class="btn btn-primary">Go to Batteries</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow">
            <div class="card-body">
                <h5 class="card-title">BESS</h5>
                <p class="card-text">Manage BESS systems.</p>
                <a asp-page="./BessPage/Index" class="btn btn-primary">Go to BESS</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow">
            <div class="card-body">
                <h5 class="card-title">Operation Modes</h5>
                <p class="card-text">Configure operation modes.</p>
                <a asp-page="./OperationModePage/Index" class="btn btn-primary">Go to Operation Modes</a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow">
            <div class="card-body">
                <h5 class="card-title">PCS Models</h5>
                <p class="card-text">Manage PCS models.</p>
                <a asp-page="./PcsModelPage/Index" class="btn btn-primary">Go to PCS Models</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow">
            <div class="card-body">
                <h5 class="card-title">PCS</h5>
                <p class="card-text">Manage system PCS.</p>
                <a asp-page="./PcsPage/Index" class="btn btn-primary">Go to PCS</a>
            </div>
        </div>
    </div>
</div>

<script>
const token = localStorage.getItem('jwtToken');
fetch('/api/datos-protegidos', {
    headers: {
        'Authorization': 'Bearer ' + token
    }
})
.then(response => {
    if (response.status === 401) {
        window.location.href = "/Auth/Index";
    }
    return response.json();
})
.then(data => {
    // Usa los datos protegidos
});
</script>